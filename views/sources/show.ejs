<% include ../partials/header %>

<title><%= source.name_long %></title>

<div class="container my-5">
    <div class="flex">
        <a href="/sources" class="prev-page"><i class="far fa-arrow-alt-circle-left"></i> Source List</a>
        <div class="dropdown">
            <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-ellipsis-v"></i>
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/sources/<%= source._id %>/edit"><i class="fas fa-pencil-alt"></i>   Edit</a>
                <a class="dropdown-item" href="#"><i class="fas fa-trash-alt"></i>   Delete</a>
            </div>
        </div>
    </div>
    
    <hr>
    <div class="row" id="source-container">
        <div class="col-sm-4">
            <div class="centered">
                <img src="<%= source.logo %>" alt="<%= source.name_short %> logo">
                <a id="edit-photo" href="#">Edit Source Logo</a>
            </div>
            <div id="source-info">
                <div class="centered">
                    <h3><%= source.name_short %></h3>
                    <h6> <%= source.name_long %></h6>
                </div>
                <hr>
            </div>
            <p>Reputability Rating: <%= source.reputability %></p>
            <p>Total Facts: <%= source.number_of_facts %></p>
        </div>
        <div class="col-sm-8">
            <h5>Facts from <b><%= source.name_long %></b></h5>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Fact</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col">submitted by</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i = 0; i < facts.length; i++) { %>
                        <% if (facts[i].source_name == source.name_short) { %>
                            <tr>
                                <td><%= facts[i].headline %></td>
                                <td></td>
                                <td></td>
                                <td><%= facts[i].contributor %></td>
                            </tr>
                            <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <% include ../partials/footer %>